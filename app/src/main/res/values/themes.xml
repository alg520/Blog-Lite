<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.BlogLite" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>

        <item name="android:activatedBackgroundIndicator">?android:attr/selectableItemBackground
        </item>
        <item name="android:windowBackground">@color/white</item>
        <item name="alertDialogTheme">@style/Theme.BlogLite.Dialog.Alert</item>

        <!-- Main Theme Colours -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/grey_e2</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@color/grey_dark</item>
        <item name="android:textColorSecondary">@color/grey</item>
        <item name="android:textColorTertiary">?android:attr/textColorPrimary</item>

        <item name="actionMenuTextAppearance">@style/Theme.BlogLite.ActionBar.MenuItem</item>
        <item name="actionBarStyle">@style/Theme.BlogLite.ActionBar</item>
        <item name="android:actionBarStyle">?actionBarStyle</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="actionBarWidgetTheme">@null</item>
        <item name="toolbarStyle">@style/Theme.BlogLite.Toolbar</item>

        <!-- Window Transitions -->
        <item name="android:windowContentTransitions">true</item>

        <!-- Miscellaneous -->
        <item name="drawerArrowStyle">@style/Theme.BlogLite.Drawer</item>

        <item name="android:windowActionModeOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="android:textViewStyle">@style/Theme.BlogLite.Widget.TextView</item>
        <item name="android:editTextStyle">?editTextStyle</item>
        <item name="android:textColorHint">?android:attr/textColorSecondary</item>

        <!--BUTTONS-->
        <item name="buttonBarButtonStyle">@style/Widget.Button.ButtonBar.AlertDialog</item>
        <item name="buttonBarNegativeButtonStyle">
            @style/Widget.Button.ButtonBar.AlertDialog.Negative
        </item>
        <item name="buttonBarNeutralButtonStyle">?buttonBarNegativeButtonStyle</item>
    </style>

    <style name="Theme.BlogLite.ActionBar.MenuItem" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="Theme.BlogLite.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/grey_dark</item>
        <item name="android:titleTextStyle">@style/Theme.BlogLite.TextAppearance.ActionBar</item>
    </style>

    <style name="Theme.BlogLite.TextAppearance.ActionBar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Theme.BlogLite.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColorPrimary">@color/grey_dark</item>
        <item name="titleTextAppearance">@style/Toolbar.TitleText</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Theme.BlogLite.Drawer" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
        <item name="spinBars">false</item>
    </style>

    <style name="Theme.BlogLite.Widget.TextView" parent="android:Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_big</item>
    </style>

    <style name="Widget.Button.ButtonBar.AlertDialog" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">?colorAccent</item>
    </style>

    <style name="Widget.Button.ButtonBar.AlertDialog.Negative" parent="Widget.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Theme.BlogLite.Dialog.Alert" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:textViewStyle">@style/Theme.BlogLite.Widget.TextView</item>
    </style>

    <style name="TextAppearance">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>
</resources>
